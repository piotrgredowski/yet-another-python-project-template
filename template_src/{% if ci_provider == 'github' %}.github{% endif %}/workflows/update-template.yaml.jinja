name: Update Copier Template

on:
  push:
    branches:
      - main
  workflow_dispatch:
  schedule:
    - cron: '0 0 * * *'  # Runs every day at midnight UTC

jobs:
  update-template:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v3

    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.x'

    - name: Install Copier and required dependencies
      run: pip install copier copier-templates-extensions requests

    - name: Update Copier Template
      run: |
        python -m copier update . --skip-answered -a .copier-answers.main.yaml --trust --conflict=inline

    - name: Commit changes
      run: |
        git config --global user.email "piotrgredowski@gmail.com"
        git config --global user.name "Piotr Gredowski"
        git add .
        git commit -m "chore: update copier template"
        git checkout -b update-copier-template
        git push --set-upstream origin update-copier-template

    - name: Create Pull Request
      uses: actions/github-script@v6
      with:
        script: |
          const { repo, owner } = context.repo;
          const result = await github.rest.pulls.create({
            title: '[Example] Simple demo',
            owner,
            repo,
            head: {% raw %}'${{ github.ref_name }}'{% endraw %},
            base: 'develop',
            body: [
              'This PR is auto-generated by',
              '[actions/github-script](https://github.com/actions/github-script).'
            ].join('\n')
          });
          github.rest.issues.addLabels({
            owner,
            repo,
            issue_number: result.data.number,
            labels: ['feature', 'automated pr']
          });
